@model ICollection<Drink>
@{
    ViewData["Title"] = "Index";
    var count = 1;
}

<h1 class="h3 mb-4 text-gray-800">İçkilər</h1>

<a class="btn btn-outline-success" asp-action="Create"> <i class="far fa-caret-square-right"></i>Create </a>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlıq</th>
            <th scope="col">Qiymət</th>
            <th scope="col">Şəkil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Drink drink in Model)
        {
        <tr>
            <td>@count</td>
            <td>@drink.Title</td>
            <td>@drink.Price</td>
            <td>
                <img style="width:200px; height:200px; border-radius:50%" src="~/images/@drink.Image" alt="">
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Update" asp-route-Id="@drink.Id"><i class="fas fa-eraser"></i></a>
                <a class="text-danger ml-1" onclick="return confirm('Deqiq silirsende he baxa sonra geri donusu olmaya biler')" asp-action="Delete" asp-route-Id="@drink.Id"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
            count++;

        }
    </tbody>
</table>
