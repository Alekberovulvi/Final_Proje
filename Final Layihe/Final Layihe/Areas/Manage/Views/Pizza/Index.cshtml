@model ICollection<Pizza>
@{
    ViewData["Title"] = "Index";
    var count = 1;
}

<h1 class="h3 mb-4 text-gray-800">Pizzalar</h1>

<a class="btn btn-outline-success" asp-action="Create"> <i class="far fa-caret-square-right"></i>Create </a>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlıq</th>
            <th scope="col">Məzmun</th>
            <th scope="col">Şəkil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Pizza pizza in Model)
        {
            <tr>
                <td>@count</td>
                <td>@pizza.Title</td>
                <td>@pizza.Desc</td>
                <td>
                    <img style="width:200px; height:200px; border-radius:50%" src="~/images/@pizza.Image" alt="">
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-route-Id="@pizza.Id"><i class="fas fa-eraser"></i></a>
                    <a class="text-danger ml-1" onclick="return confirm('Deqiq silirsende he baxa sonra geri donusu olmaya biler')" asp-action="Delete" asp-route-Id="@pizza.Id"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
            count++;

        }
    </tbody>
</table>
