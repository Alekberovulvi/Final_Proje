@model ICollection<Campaign>
@{
    ViewData["Title"] = "Index";
    var count=1;
}

<h1 class="h3 mb-4 text-gray-800">Kampaniyalar</h1>

<a class="btn btn-outline-success" asp-action="Create"> <i class="far fa-caret-square-right"></i>Create </a>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">SubTitle</th>
            <th scope="col">Desc</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Campaign campaign in Model)
        {
        <tr>
            <td>@count</td>
            <td>@campaign.Title</td>
            <td>@campaign.SubTitle</td>
            <td>@campaign.Desc</td>
            <td>
                <a class="btn btn-primary" asp-action="Detail" asp-route-Id="@campaign.Id"> <i class="fas fa-edit"></i></a>
                <a class="btn btn-warning" asp-action="Update" asp-route-Id="@campaign.Id"><i class="fas fa-eraser"></i></a>
                <a class="text-danger ml-1" onclick="return confirm('Deqiq silirsende he baxa sonra geri donusu olmaya biler')" asp-action="Delete" asp-route-Id="@campaign.Id"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
            count++;

        }
    </tbody>
</table>
