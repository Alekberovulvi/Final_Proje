                            <label class="form-check-label" for="exampleCheck1">Məni yadda saxla</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Qeydiyyat</button>
                    </form>
                    <button data-bs-toggle="modal" data-bs-target="#giris" class="btn btn-warning" style="margin-left: 300px;
                                    margin-top: -37px;" href="#">
                        Giriş Ekranına Geri Dönun
                    </button>
                </div>
            </div>
        </div>
