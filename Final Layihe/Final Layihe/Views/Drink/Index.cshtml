@model DrinkVM

<section class="pizza">
    <div class="container">
        <div class="row">
            @foreach (Drink drink in Model.Drinks)
            {
                <div class="col-lg-3">
                    <img src="~/images/@drink.Image" alt="">
                    <h1>
                        @drink.Title
                    </h1>
                   
                    <a asp-controller="Drink" asp-action="GetDetails" asp-route-Id="@drink.Id" id="choose" class="btn btn-success openModal">
                        Bunu Seç
                    </a>
                </div>

            }
        </div>
    </div>
</section>

<div class="modal-container">

</div>