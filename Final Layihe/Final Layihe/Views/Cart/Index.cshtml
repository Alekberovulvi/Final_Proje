@model List<BasketVM>
@{
    ViewData["Title"] = "Index";
    int counter = 0;

}

<div class="container">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Şəkil</th>
                    <th scope="col">Ad</th>
                    <th scope="col">Sayı</th>
                    <th scope="col">Qiymət</th>
                </tr>
            </thead>
            <tbody>
                @foreach (BasketVM item in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>
                            <img src="~/images/@item.Image" style="width:100px;height:100px" alt="Alternate Text" />
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Count</td>
                        <td>@item.Price</td>
                        <td class="text-center text-danger">
                            <a asp-action="removefrombasket" asp-route-id="@item.ProductId">x</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
